<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select a Plan</title>
    <link rel="stylesheet" href="/css/style.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .plans-container {
            text-align: center;
            max-width: 800px;
            padding: 20px;
        }

        h1 {
            color: #333;
            margin-bottom: 10px;
        }

        p {
            color: #555;
            margin-top: 5px;
        }

        .toggle-switch {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 20px 0;
        }

        .toggle-switch label {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: 0.4s;
            border-radius: 34px;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }

        input:checked+.slider {
            background-color: #1c3768;
        }

        input:checked+.slider:before {
            transform: translateX(26px);
        }

        #billingText {
            margin-left: 10px;
            font-weight: bold;
        }

        .plans {
            display: flex;
            align-items: center;
            gap: 40px;
        }

        .plan {
            background-color: #fafafa;
            border: 1px solid #eaeaea;
            padding: 20px;
            border-radius: 8px;
            /* box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); */
            transition: transform 0.3s ease;
        }

        .plan:hover {
            transform: translateY(-5px);
        }

        .plan h2 {
            color: #333;
        }

        .price {
            font-size: 1.1em;
            font-weight: bold;
            margin: 10px 0;
        }

        .description {
            color: #777;
        }

        .select-button {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            color: #fff;
            background-color: #1c3768;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .select-button:hover {
            background-color: #284eb6;
        }
    </style>
</head>

<body>
    <div class="plans-container">
        <h4 class="gradient-dark-text">Choose Your Plan</h1>
            <p>Select between Monthly and Yearly billing options.</p>

            <div class="toggle-switch">
                <label>
                    <input type="checkbox" id="billingToggle" onclick="togglePlans()">
                    <span class="slider"></span>
                </label>
                <span id="billingText">Yearly</span>
            </div>

            <div class="plans" id="plansContainer">
                <!-- Yearly Plans -->
                <div class="plan yearly">
                    <h5>Starter</h5>
                    <p class="price">$199 / year</p>
                    <p class="description">Basic features for getting started.</p>
                    <a href="/plans/yearlyStarter" class="select-button">Select Plan</a>
                </div>

                <div class="plan yearly">
                    <h5>Pro</h5>
                    <p class="price">$299 / year</p>
                    <p class="description">Advanced features for professionals.</p>
                    <a href="/plans/yearlyPro" class="select-button">Select Plan</a>
                </div>

                <div class="plan yearly">
                    <h5>Ultimate</h5>
                    <p class="price">$599 / year</p>
                    <p class="description">All features for growing businesses.</p>
                    <a href="/plans/yearlyUltimate" class="select-button">Select Plan</a>
                </div>

                <!-- Monthly Plans (Initially hidden) -->
                <div class="plan monthly" style="display: none;">
                    <h5>Starter</h5>
                    <p class="price">$19 / month</p>
                    <p class="description">Basic features for getting started.</p>
                    <a href="/plans/monthlyStarter" class="select-button">Select Plan</a>
                </div>

                <div class="plan monthly" style="display: none;">
                    <h5>Pro</h5>
                    <p class="price">$29 / month</p>
                    <p class="description">Advanced features for professionals.</p>
                    <a href="/plans/monthlyPro" class="select-button">Select Plan</a>
                </div>

                <div class="plan monthly" style="display: none;">
                    <h5>Ultimate</h5>
                    <p class="price">$59 / month</p>
                    <p class="description">All features for growing businesses.</p>
                    <a href="/plans/monthlyUltimate" class="select-button">Select Plan</a>
                </div>
            </div>
    </div>

    <script>
        function togglePlans() {
            const billingToggle = document.getElementById('billingToggle');
            const billingText = document.getElementById('billingText');
            const yearlyPlans = document.querySelectorAll('.yearly');
            const monthlyPlans = document.querySelectorAll('.monthly');

            if (billingToggle.checked) {
                // Show monthly plans, hide yearly plans
                yearlyPlans.forEach(plan => plan.style.display = 'none');
                monthlyPlans.forEach(plan => plan.style.display = 'block');
                billingText.textContent = 'Monthly';
            } else {
                // Show yearly plans, hide monthly plans
                yearlyPlans.forEach(plan => plan.style.display = 'block');
                monthlyPlans.forEach(plan => plan.style.display = 'none');
                billingText.textContent = 'Yearly';
            }
        }
    </script>
</body>

</html>